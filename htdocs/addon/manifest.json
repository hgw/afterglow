
{
  "manifest_version": 2,
	"name":"Human Cursor",
  "description":"",
	"version":"1.0",



  "content_scripts": [
    {
      "matches": ["https://*/*","http://*/*"],
      "js": ["js/libs/jquery.js", "js/afterglow.js"],
      "run_at":"document_idle"
    }
  ],

  "browser_action": {
    "default_icon":"img/icon.png",
    "default_title":"Human Cursor"
  },


  "icons": {
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },


	"permissions" : [
		"tabs", "https://*/*","http://*/*"
	],


  "background": {
		"scripts": [
      "js/libs/jquery.js",
      "js/background.js"
    ]
	},


  "homepage_url": "http://www.transmediale.de/",
	"content_security_policy":"script-src 'self'; object-src 'self'"
}